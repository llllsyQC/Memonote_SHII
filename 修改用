    If errorCount > 0 Then
        MsgBox "15分単位でない値が " & errorCount & " 件見つかりました（赤文字表示）", vbExclamation
    Else
        MsgBox "すべての値が15分単位で正しく入力されています。", vbInformation
    End If

    Exit Sub

ErrorHandler:
    MsgBox "入力チェックでエラー：" & Err.Description, vbCritical
End Sub


Dim checkResult As Boolean
wbVer52.Application.Run "入力チェック"
If checkResult = False Then
    MsgBox "Ver5.2 に15分単位でない値があります（赤文字で表示）。", vbExclamation
End If

