Function 入力チェック() As Boolean
    On Error GoTo ErrHandler

    Dim ws As Worksheet
    Set ws = ThisWorkbook.Sheets("都度対応項目(時間)")

    Dim i As Long, x As Long
    Dim Lrow As Long, Lcol As Long

    ' 最后一列、最后一行
    Lrow = ws.Cells(ws.Rows.Count, 10).End(xlUp).Row
    Lcol = ws.Cells(6, ws.Columns.Count).End(xlToLeft).Column

    入力チェック = True

    For i = 15 To Lcol
        For x = 10 To Lrow
            If IsNumeric(ws.Cells(x, i).Value) Then
                If Modulo(ws.Cells(x, i).Value, 0.25) > 0 Then
                    ws.Cells(x, i).Font.ColorIndex = 3  ' 赤
                    入力チェック = False
                Else
                    ws.Cells(x, i).Font.ColorIndex = 1  ' 黒
                End If
            End If
        Next x
    Next i

    Exit Function

ErrHandler:
    MsgBox "入力チェック中にエラーが発生しました：" & Err.Description, vbExclamation
    入力チェック = False
End Function

